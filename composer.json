{
    "name": "algoritma/shopware-query-builder",
    "version": "1.0.0",
    "description": "A modern, fluent query builder for Shopware 6.7+ with zero configuration. Write intuitive SQL-like queries with automatic validation, alias support, and type safety for cleaner code.",
    "type": "shopware-platform-plugin",
    "license": "MIT",
    "keywords": [
        "shopware",
        "query-builder",
        "fluent",
        "shopware6",
        "dal"
    ],
    "authors": [
        {
            "name": "Algoritma srl",
            "email": "info@algoritma.it"
        }
    ],
    "require": {
        "php": "^8.2",
        "shopware/core": "~6.7.0"
    },
    "require-dev": {
        "algoritma/php-coding-standards": "^3.0",
        "frosh/shopware-rector": "^0.5.9",
        "phpunit/phpunit": "^11.5",
        "symfony/var-dumper": "^6.4|^7.4"
    },
    "autoload": {
        "psr-4": {
            "Algoritma\\ShopwareQueryBuilder\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ],
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Algoritma\\ShopwareQueryBuilder\\Tests\\": "tests/"
        }
    },
    "extra": {
        "copyright": "Algoritma srl",
        "shopware-plugin-class": "Algoritma\\ShopwareQueryBuilder\\AlgoritmaShopwareQueryBuilder",
        "shopware-bundle-class": "Algoritma\\ShopwareQueryBuilder\\ShopwareQueryBuilderBundle",
        "label": {
            "de-DE": "Shopware Query Builder",
            "en-GB": "Shopware Query Builder"
        },
        "description": {
            "de-DE": "Ein moderner Query Builder für Shopware 6.7+ ohne Konfiguration. Schreiben Sie intuitive SQL-ähnliche Abfragen mit automatischer Validierung, Alias-Unterstützung und Typsicherheit.",
            "en-GB": "A modern, fluent query builder for Shopware 6.7+ with zero configuration. Write intuitive SQL-like queries with automatic validation, alias support, and type safety for cleaner code."
        },
        "manufacturerLink": {
            "de-DE": "https://github.com/algoritma-dev/shopware-query-builder",
            "en-GB": "https://github.com/algoritma-dev/shopware-query-builder"
        },
        "supportLink": {
            "de-DE": "https://github.com/algoritma-dev/shopware-query-builder/issues",
            "en-GB": "https://github.com/algoritma-dev/shopware-query-builder/issues"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "algoritma/php-coding-standards": true,
            "phpstan/extension-installer": true,
            "symfony/runtime": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "php-cs-fixer fix --configuration=custom/static-plugins/ShopwareQueryBuilder --dry-run --diff",
        "cs-fix": "php-cs-fixer fix --configuration=custom/static-plugins/ShopwareQueryBuilder --diff",
        "rector-check": "rector process --dry-run",
        "rector-fix": "rector process",
        "phpstan": "phpstan analyze --memory-limit=-1",
        "qa": [
            "@phpstan",
            "@rector-check",
            "@cs-check",
            "@phpunit"
        ],
        "qa-fix": [
            "@phpstan",
            "@rector-fix",
            "@cs-fix",
            "@phpunit"
        ],
        "pre-commit": "@qa",
        "phpunit": "phpunit -c phpunit.xml",
        "format": "docker run --rm -v $(pwd):/ext shopware/shopware-cli:latest extension format /ext",
        "check": "docker run --rm -v $(pwd):/ext shopware/shopware-cli:latest extension validate --full /ext"
    }
}
